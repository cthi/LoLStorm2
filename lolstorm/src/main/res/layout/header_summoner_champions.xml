<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/green_primary_light"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/header_summoner_champions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_summoner_champions_title"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/header_summoner_champions_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_summoner_champions_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="5.5 / 3.5 / 5.5"/>

        <TextView
            android:id="@+id/header_summoner_champions_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_summoner_champions_kda"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="100 Games 50 W 50 L"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>