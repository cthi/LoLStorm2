<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/view_card_padding"
    android:layout_marginTop="@dimen/view_card_padding"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_summoner_img"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:border_color="#ffffff"
            tools:ignore="contentDescription"/>

        <TextView
            android:id="@+id/item_summoner_league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_summoner_img"
            android:layout_toRightOf="@id/item_summoner_img"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/item_summoner_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_summoner_league_name"
            android:layout_toEndOf="@id/item_summoner_img"
            android:layout_toRightOf="@id/item_summoner_img"/>

        <ImageButton
            android:id="@+id/item_summoner_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_action_overflow"
            tools:ignore="contentDescription"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>