<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/green_primary_light"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

        <ImageView
            android:id="@+id/header_summoner_leagues_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/header_summoner_leagues_tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/header_summoner_leagues_image"
            android:layout_toRightOf="@+id/header_summoner_leagues_image"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="Challenger"/>

        <TextView
            android:id="@+id/header_summoner_leagues_tier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_summoner_leagues_tier"
            android:layout_toEndOf="@+id/header_summoner_leagues_image"
            android:layout_toRightOf="@+id/header_summoner_leagues_image"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Zyra's Buddies"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>