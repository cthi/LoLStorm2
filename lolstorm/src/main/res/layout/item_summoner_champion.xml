<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_summoner_champion_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:src="@drawable/aatrox"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/item_summoner_champion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/item_summoner_champion_image"
            android:layout_toEndOf="@id/item_summoner_champion_image"
            tools:text="Syndra"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_summoner_champion_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_summoner_champion_name"
            android:layout_toRightOf="@id/item_summoner_champion_image"
            android:layout_toEndOf="@id/item_summoner_champion_image"
            tools:text="KDA 8/10/20"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_summoner_champion_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_summoner_champion_kda"
            android:layout_toRightOf="@id/item_summoner_champion_image"
            android:layout_toEndOf="@id/item_summoner_champion_image"
            tools:text="Games"
            android:textSize="14sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

