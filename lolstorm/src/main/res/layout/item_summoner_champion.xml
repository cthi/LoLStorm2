<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_summoner_champion_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            tools:src="@drawable/aatrox"/>

        <TextView
            android:id="@+id/item_summoner_champion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_summoner_champion_image"
            android:layout_toRightOf="@id/item_summoner_champion_image"
            android:textSize="16sp"
            tools:text="Syndra"/>

        <TextView
            android:id="@+id/item_summoner_champion_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_summoner_champion_name"
            android:layout_toEndOf="@id/item_summoner_champion_image"
            android:layout_toRightOf="@id/item_summoner_champion_image"
            android:textSize="14sp"
            tools:text="KDA 8/10/20"/>

        <TextView
            android:id="@+id/item_summoner_champion_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_summoner_champion_kda"
            android:layout_toEndOf="@id/item_summoner_champion_image"
            android:layout_toRightOf="@id/item_summoner_champion_image"
            android:textSize="14sp"
            tools:text="Games"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

