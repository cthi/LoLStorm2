<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_champion_spell_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_champion_spell_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        tools:src="@drawable/_1006"/>

    <TextView
        android:id="@+id/item_champion_spell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_champion_spell_image"
        android:layout_toRightOf="@id/item_champion_spell_image"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Lizards Tail"/>

    <TextView
        android:id="@+id/item_champion_spell_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_champion_spell_name"
        android:layout_toEndOf="@id/item_champion_spell_image"
        android:layout_toRightOf="@id/item_champion_spell_image"
        tools:text="124 Mana"/>

    <TextView
        android:id="@+id/item_champion_spell_cd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_champion_spell_cost"
        android:layout_toEndOf="@id/item_champion_spell_image"
        android:layout_toRightOf="@id/item_champion_spell_image"
        tools:text="120 Seconds"/>

    <TextView
        android:id="@+id/item_champion_spell_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_champion_spell_image"
        tools:text="The quick brown fox jumps over the lazy cat."/>

</RelativeLayout>