<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/header_player_games_player_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:border_width="1dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:border_color="#ffffff"/>

        <TextView
            android:id="@+id/header_player_games_player_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/header_player_games_player_icon"
            android:layout_toEndOf="@id/header_player_games_player_icon"
            tools:text="Exodarkr"/>

        <ImageView
            android:id="@+id/header_player_games_player_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:layout_below="@id/header_player_games_player_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/header_player_games_player_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:layout_below="@id/header_player_games_player_name"
            tools:text="Level 30  Diamond 5  8999 Wins"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>