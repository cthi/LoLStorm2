<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/view_card_padding"
    android:layout_marginBottom="@dimen/view_card_padding"
    app:cardBackgroundColor="@color/green_primary_light"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/header_player_games_player_icon"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:border_color="#ffffff"
            app:border_width="1dp"/>

        <TextView
            android:id="@+id/header_player_games_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/header_player_games_player_icon"
            android:layout_toRightOf="@id/header_player_games_player_icon"
            android:textColor="@color/white"
            android:textSize="28sp"
            tools:text="Exodarkr"/>

        <TextView
            android:id="@+id/header_player_games_player_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_player_games_player_name"
            android:layout_toEndOf="@id/header_player_games_player_icon"
            android:layout_toRightOf="@id/header_player_games_player_icon"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Level 30"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>