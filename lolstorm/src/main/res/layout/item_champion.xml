<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_champion_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        tools:src="@drawable/aatrox"/>

    <TextView
        android:id="@+id/item_champion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_champion_image"
        android:layout_toRightOf="@+id/item_champion_image"
        android:textSize="16sp"
        tools:text="CHAMPION"/>

    <TextView
        android:id="@+id/item_champion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_champion_name"
        android:layout_toEndOf="@+id/item_champion_image"
        android:layout_toRightOf="@+id/item_champion_image"
        android:textSize="14sp"
        tools:text="Title"/>

</RelativeLayout>