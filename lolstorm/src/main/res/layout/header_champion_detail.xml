<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_primary_light"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_champion_detail_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        tools:src="@drawable/aatrox"/>

    <TextView
        android:id="@+id/header_champion_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/header_champion_detail_image"
        android:layout_toRightOf="@id/header_champion_detail_image"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Aatrox"/>

    <TextView
        android:id="@+id/header_champion_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_champion_detail_name"
        android:layout_toEndOf="@id/header_champion_detail_image"
        android:layout_toRightOf="@id/header_champion_detail_image"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="The king of the world"/>

</RelativeLayout>