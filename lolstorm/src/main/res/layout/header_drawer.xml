<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/header_drawer_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_public_white_24dp"
        android:drawableStart="@drawable/ic_public_white_24dp"
        android:gravity="center"
        android:drawablePadding="4dp"
        android:layout_alignParentBottom="true"
        tools:text="NA"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_drawer_summoner_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        app:border_color="@color/white"
        app:border_width="2dp"
        tools:src="@drawable/_660"/>

    <TextView
        android:id="@+id/header_drawer_summoner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_drawer_summoner_image"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="@color/white"
        tools:text="Yammy"/>
</RelativeLayout>