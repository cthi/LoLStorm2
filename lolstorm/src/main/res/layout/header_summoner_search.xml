<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/blue_light"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <Button
            android:id="@+id/header_summoner_search_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/header_summoner_search_title"
            android:textColor="@color/blue"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/header_summoner_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/header_summoner_search_button"
            android:layout_toStartOf="@id/header_summoner_search_button"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>